<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.swiftly.popularmovies.DetailActivityFragment"
    tools:showIn="@layout/activity_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/overview_card_view"
            style="@style/CardView.Custom"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/overview_label"
                    style="@style/CardView.Label"
                    android:text="@string/overview" />

                <View style="@style/CardView.Divider" />

                <TextView
                    android:id="@+id/overview_text_view"
                    style="@style/CardView.Content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/placeholder_overview_text" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/detail_card_view"
            style="@style/CardView.Custom"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_label"
                    style="@style/CardView.Label"
                    android:text="@string/details" />

                <View style="@style/CardView.Divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/CardView.Content"
                        android:text="@string/rating" />

                    <RatingBar
                        android:id="@+id/movie_rating_bar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/CardView.Content"
                        android:text="@string/release_date" />

                    <TextView
                        android:id="@+id/release_date_text_view"
                        style="@style/CardView.Content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="16dp"
                        android:text="@string/placeholder_release_date" />

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cast_card_view"
            style="@style/CardView.Custom"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cast_label"
                    style="@style/CardView.Label"
                    android:text="@string/cast" />

                <View style="@style/CardView.Divider" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
